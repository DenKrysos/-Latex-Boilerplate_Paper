%=== Block, Define tikzposter
\defineblockstyle{DenKrPosterBlockStyleSimple}{%
    titlewidthscale=0.9, bodywidthscale=1,roundedcorners=5%
}{%
    \draw[color=framecolor, fill=blockbodybgcolor,%
    rounded corners=\blockroundedcorners] (blockbody.south west)%
    rectangle (blockbody.north east);%
    \ifBlockHasTitle%
    \draw[color=framecolor, fill=blocktitlebgcolor,%
    rounded corners=\blockroundedcorners] (blocktitle.south west)%
    rectangle (blocktitle.north east);%
    \fi%
}%
%
\defineblockstyle{DenKrPosterBlockStyle}{%
    titlewidthscale=1,% 0.9
    bodywidthscale=1,%
    roundedcorners=10,%
    % titleinnersep=6mm,%
    % bodyinnersep=1c,%
    % titleleft,%
    % titleoffsetx=0pt,%
    % titleoffsety=0pt,%
    % bodyoffsetx=0mm,%
    % bodyoffsety=15mm,%
    % bodyverticalshift=10mm,%
    % linewidth=2pt%
}{%
    \let\framelinewidth\undefined%
    \newlength\framelinewidth%
    \setlength\framelinewidth{0.002\textwidth}%
    \tikzstyle{frameline}=[%
        line width=\framelinewidth,%
        line join=round%
    ]
    \path[frameline,%
        draw=framecolor,fill=blockbodybgcolor,%
        rounded corners=\blockroundedcorners%
    ]%
        (blockbody.north east|-blocktitle.east)%
        --(blockbody.south east)%
        --(blockbody.south west)%
        [sharp corners]%
        --(blockbody.north west|-blocktitle.west)%
        --cycle%
    ;%
    \ifBlockHasTitle%
    \let\diamondwidth\undefined%
    \newlength\diamondwidth%
    \setlength\diamondwidth{2em}%
    \coordinate(blocktitleTL)at($(blocktitle.north west)+(\diamondwidth,0)$);%
    \coordinate(blocktitleBL)at($(blocktitle.south west)+(\diamondwidth,0)$);%
    \coordinate(blocktitleTR)at($(blocktitle.north east)+(-\diamondwidth,0)$);%
    \coordinate(blocktitleBR)at($(blocktitle.south east)+(-\diamondwidth,0)$);%
    \path[frameline,%
        draw=framecolor,fill=blocktitlebgcolor,%
        rounded corners=\blockroundedcorners%
    ]%
        %(blocktitle.south west)rectangle(blocktitle.north east)%
        ($(blocktitle.west)+(-0,0)$)%
        [rounded corners=10]%
        --(blocktitleTL)%
        --(blocktitleTR)%
        [sharp corners]%
        --($(blocktitle.east)+(0,0)$)%
        [rounded corners=10]%
        --(blocktitleBR)%
        --(blocktitleBL)%
        [sharp corners]%
        --cycle%
    ;%
    \fi%
}%
