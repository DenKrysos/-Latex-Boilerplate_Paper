    line width=0.003\textwidth,%
    line join=round,%
]
\tikzstyle{DenKrPosterTitleFill}=[%
    shading=axis,%
    top color=titlebgcolor,%
    bottom color=titlebgcolor!80!black,%
    middle color=titlebgcolor!50!white,%
]
\newcommand{\DenKrPosterTitleAccent}{%
    \coordinate(accentOneAnchorT)at($(titleTR)+(-0.015\titlewidth,0)$);%
    \coordinate(accentOneAnchorB)at($(titleBR)!.2!(titleBL)$);%
    \coordinate(accentTwoAnchorT)at($(titleTR)+(-0.007\titlewidth,0)$);%
    \coordinate(accentTwoAnchorB)at($(accentOneAnchorB)+(0.02\textwidth,0)$);%
    \path[%
        top color=white,%
        bottom color=blocktitlebgcolor,%
    ]%
        (accentOneAnchorT)%
        ..controls%
            ++(180+4:1.1\titleheight)%Relative to Start-Point
            and%
            ++(5:1.2\titleheight)%Relative to End-Point
        ..%
        (accentOneAnchorB)%
        ..controls%
            ++(1:1.5\titleheight)%Relative to End-Point
            and%
            ++(180+10:1.0\titleheight)%Relative to Start-Point
        ..%
        cycle%
    ;%
    \path[%
        right color=white,%
        left color=blocktitlebgcolor,%
    ]%
        (accentTwoAnchorT)%
        ..controls%
            ++(180+10:0.75\titleheight)%Relative to Start-Point
            and%
            ++(2:1.4\titleheight)%Relative to End-Point
        ..%
        (accentTwoAnchorB)%
        ..controls%
            ++(1:1.65\titleheight)%Relative to End-Point
            and%
            ++(180+25:0.7\titleheight)%Relative to Start-Point
        ..%
        cycle%
    ;%
}
\definetitlestyle{DenKrPosterTitleTrapez}{%
    width=\textwidth,%
    %linewidth=0.003\textwidth,% 5pt, 0.002\textwidth
    titletotopverticalspace=0in%
}{%
    \begin{scope}[line width=\titlelinewidth,]%
    \coordinate(titleTL)at(\titleposleft,\titlepostop);%
    \coordinate(titleTR)at(\titleposright,\titlepostop);%
    \coordinate(titleTC)at($(titleTL)!.5!(titleTR)$);%
    \coordinate(titleBL)at(\titleposleft,\titleposbottom);%
    \coordinate(titleBR)at(\titleposright,\titleposbottom);%
    \coordinate(titleBC)at($(titleBL)!.5!(titleBR)$);%
    \coordinate(titleL)at($(titleTL)!.5!(titleBL)$);%
    \coordinate(titleR)at($(titleTR)!.5!(titleBR)$);%
    \coordinate(titleBLIn)at($(titleBL)!.05!(titleBR)$);%
    \coordinate(titleBRIn)at($(titleBR)!.05!(titleBL)$);%
    \path[%
        DenKrPosterTitleFill,%
        save path=\titleFrame,%
    ]
        (titleTL)%
        --(titleTR)%
        [rounded corners=30]%
        --(titleR)%
        --(titleBRIn)%
        --(titleBLIn)%
        --(titleL)%
        [sharp corners]%
        --cycle%
    ;%
    \DenKrPosterTitleAccent
    \path[%
        DenKrPosterTitleFrame,%
        use path=\titleFrame,%
    ];%
    \end{scope}%
}%
\definetitlestyle{DenKrPosterTitleSlanted}{%
    width=\textwidth,%
    %linewidth=0.003\textwidth,% 5pt, 0.002\textwidth
    titletotopverticalspace=0in%
}{%
    \begin{scope}[line width=\titlelinewidth,]%
    \coordinate(titleTL)at(\titleposleft,\titlepostop);%
    \coordinate(titleTR)at(\titleposright,\titlepostop);%
    \coordinate(titleTC)at($(titleTL)!.5!(titleTR)$);%
    \coordinate(titleBL)at(\titleposleft,\titleposbottom);%
    \coordinate(titleBR)at(\titleposright,\titleposbottom);%
    \coordinate(titleBC)at($(titleBL)!.5!(titleBR)$);%
    \coordinate(titleL)at($(titleTL)!.5!(titleBL)$);%
    \coordinate(titleR)at($(titleTR)!.5!(titleBR)$);%
    \coordinate(titleBLIn)at($(titleBL)!.05!(titleBR)$);%
    \coordinate(titleBRIn)at($(titleBR)!.05!(titleBL)$);%
    \let\titleheight\undefined%
    \newlength\titleheight%
    \setlength\titleheight{\titlepostop-\titleposbottom}%
    \let\titlewidth\undefined%
    \newlength\titlewidth%
    \setlength\titlewidth{\titleposright-\titleposleft}%
    \path[%
        DenKrPosterTitleFill,%
        save path=\titleFrame,%
    ]
        (titleTL)%
        --(titleTR)%
        [rounded corners=20]%
        ..controls%
            ++(180+50:0.5\titleheight)%Relative to Start-Point
            and%
            ++(30:0.6\titleheight)%Relative to End-Point
        ..%
        (titleBRIn)%
        --(titleBLIn)%
        ..controls%
            ++(180-30:0.6\titleheight)%
            and%
            ++(-50:0.5\titleheight)%
        ..%
        cycle%
    ;%
    \DenKrPosterTitleAccent
    %\draw[red](titleL)--($(titleL)+(\titlewidth,0)$);
    \path[%
        DenKrPosterTitleFrame,%
        use path=\titleFrame,%
    ];%
    \end{scope}%
}%
