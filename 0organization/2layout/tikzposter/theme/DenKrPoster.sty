%=== Background, Define tikzposter
\definebackgroundstyle{DenKrPosterBGShadeRay}{%
    \path[inner sep=0pt,line width=2pt,save path=\bgpath]%
        (bottomleft)rectangle(topright);%
    \path[use path=\bgpath,%
        fill=backgroundcolor%
    ];%
    \coordinate(topleft)at(bottomleft|-topright);%
    \coordinate(bottomright)at(bottomleft-|topright);%
    \coordinate(bgcenter)at(0,0);%
    %
    \coordinate(shadingRadiusTopX)at($(topleft)!.4!(topright)$);%
    \coordinate(shadingRadiusTopY)at($(topleft)!.3!(bottomleft)$);%
    \coordinate(shadingRadiusTop)at(shadingRadiusTopX|-shadingRadiusTopY);%
    \path[shading=radial,%
        outer color=backgroundcolor,%
        inner color=backgroundcolor!20!colorOne,%
        %shading angle=135+30%
    ]%
        let\p1=($(topright)-(shadingRadiusTop)$),\n1={veclen(\x1,\y1)}%
        in(topright)circle[radius=\n1];
    %
    \coordinate(shadingLeftAnchor)at($(topleft)!.4!(bottomleft)$);%
    \coordinate(shadingLeftRadiusPre)at(shadingLeftAnchor-|topright);%
    \coordinate(shadingLeftRadius)at($(shadingLeftAnchor)!.2!(shadingLeftRadiusPre)$);%
    \path[shading=radial,%
        outer color=backgroundcolor,%
        inner color=backgroundcolor!40!colorOne,%
        %shading angle=135+30%
    ]%
        let\p1=($(shadingLeftAnchor)-(shadingLeftRadius)$),\n1={veclen(\x1,\y1)}%
        in(shadingLeftAnchor)circle[radius=\n1];
    %
    \coordinate(shadingRightAnchor)at($(bottomright)!.1!(topright)$);%
    \coordinate(shadingRightRadiusPre)at(shadingRightAnchor-|topleft);%
    \coordinate(shadingRightRadius)at($(shadingRightAnchor)!.4!(shadingRightRadiusPre)$);%
    \path[shading=radial,%
        outer color=backgroundcolor,%
        inner color=backgroundcolor!10!colorOne,%
        %shading angle=135+30%
    ]%
        let\p1=($(shadingRightAnchor)-(shadingRightRadius)$),\n1={veclen(\x1,\y1)}%
        in(shadingRightAnchor)circle[radius=\n1];
    %
    \tikzstyle{accentLine}=[%
        line join=round,line cap=round,%
        line width=0.002*\textwidth,%
        draw=none%
    ]%
    \tikzstyle{accentLineLight}=[%
        accentLine,%
        draw=backgroundcolor!70!white%
    ]%
    \tikzstyle{accentLineDark}=[%
        accentLine,%
        draw=backgroundcolor!60!colorOne%
    ]%
    % \tikzstyle{accentLineMedium}=[%
    %     accentLine,%
    %     draw=backgroundcolor!90!colorOne%
    % ]%
    %
    % \coordinate(accentLineMediumAnchorPre)at($(topleft)!.0!(topright)$);%
    % \coordinate(accentLineMediumAnchor)at($(accentLineMediumAnchorPre)+(0,1.0\textheight)$);%
    % \path[accentLineMedium](accentLineMediumAnchor)--++(-65:2.9*\textheight);%
    % \path[accentLineMedium](accentLineMediumAnchor)--++(-75:2.9*\textheight);%
    % \path[accentLineMedium](accentLineMediumAnchor)--++(-85:2.9*\textheight);%
    %
    \path[accentLineLight](bottomleft)--++(10:0.5*\textheight);%
    \path[accentLineLight](bottomleft)--++(30:0.7*\textheight);%
    \path[accentLineLight](bottomleft)--++(55:0.98*\textheight);%
    \path[accentLineLight](bottomleft)--++(75:0.75*\textheight);%
    \path[accentLineLight](bottomleft)--++(85:0.6*\textheight);%
    %
    \coordinate(shadingRadiusBottomX)at($(bottomleft)!.2!(bottomright)$);%
    \coordinate(shadingRadiusBottomY)at($(bottomleft)!.1!(topleft)$);%
    \coordinate(shadingRadiusBottom)at(shadingRadiusBottomX|-shadingRadiusBottomY);%
    \path[shading=radial,%
        outer color=backgroundcolor,%
        inner color=backgroundcolor!10!white,%
        %opacity=0.9%
    ]%
        let\p1=($(bottomleft)-(shadingRadiusBottom)$),\n1={veclen(\x1,\y1)}%
        in(bottomleft)circle[radius=\n1];
    %
    \coordinate(accentLineDarkAnchorPre)at($(bottomright)!.6!(topright)$);%
    \coordinate(accentLineDarkAnchor)at($(accentLineDarkAnchorPre)+(0.2\textwidth,0)$);%
    \path[accentLineDark](accentLineDarkAnchor)--++(135:0.4*\textheight);%
    \path[accentLineDark](accentLineDarkAnchor)--++(155:0.6*\textheight);%
    \path[accentLineDark](accentLineDarkAnchor)--++(175:0.7*\textheight);%
    \path[accentLineDark](accentLineDarkAnchor)--++(195:0.65*\textheight);%
    %
    \path[use path=\bgpath,%
        draw=colorOne%
    ];%
}%
